namespace drr.standards.iosco.cde.version2.quantity
version "${project.version}"

import drr.regulation.common.*
import drr.standards.iosco.cde.version1.* as cdeV1

func NotionalAmountLeg1:
    inputs:
        transactionReportInstruction TransactionReportInstruction (1..1)
        defaultValue number (1..1)
    output:
        notionalAmountLeg1 number (0..1)
    set notionalAmountLeg1:
        cdeV1.quantity.NotionalAmountLeg1(transactionReportInstruction, defaultValue)

